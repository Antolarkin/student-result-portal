<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= student.name %>'s Results - Student Result Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Student Result Portal</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/students">Students</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><%= student.name %>'s Results</h1>
            <a href="/students/<%= student.id %>/results/new" class="btn btn-primary">Add New Result</a>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h5>Student Information</h5>
                <p><strong>Name:</strong> <%= student.name %></p>
                <p><strong>Roll Number:</strong> <%= student.roll_number %></p>
                <p><strong>Email:</strong> <%= student.email %></p>
            </div>
        </div>

        <% if (results.length > 0) { %>
        <div class="card">
            <div class="card-header">
                <h5>Academic Results</h5>
            </div>
            <div class="card-body">
                        <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Marks</th>
                                <th>Grade</th>
                                <th>Semester</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% results.forEach(result => { %>
                            <tr>
                                <td><%= result.subject %></td>
                                <td><%= result.marks %></td>
                                <td>
                                    <span class="badge bg-<%= result.grade.startsWith('A') ? 'success' : result.grade.startsWith('B') ? 'primary' : result.grade === 'C' ? 'warning' : 'danger' %>">
                                        <%= result.grade %>
                                    </span>
                                </td>
                                <td><%= result.semester %></td>
                                <td>
                                    <button class="btn btn-outline-danger btn-sm delete-result" data-student-id="<%= student.id %>" data-result-id="<%= result.id %>" data-subject="<%= result.subject %>">Delete</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <% } else { %>
        <div class="alert alert-info">
            No results found for this student.
        </div>
        <% } %>

        <div class="mt-3">
            <a href="/students" class="btn btn-secondary">Back to Students</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButtons = document.querySelectorAll('.delete-result');

            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const studentId = this.getAttribute('data-student-id');
                    const resultId = this.getAttribute('data-result-id');
                    const subject = this.getAttribute('data-subject');

                    if (confirm(`Are you sure you want to delete the result for "${subject}"? This action cannot be undone.`)) {
                        fetch(`/students/${studentId}/results/${resultId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            alert(data.message);
                            location.reload();
                        })
                        .catch(error => {
                            alert('Error deleting result: ' + error.message);
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>
